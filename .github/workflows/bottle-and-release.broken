name: Bottle and Release

on: 
  push:
    tags:
       - "v*.*.*"

jobs:
  bottle:
    runs-on: macos-13
    steps:
      - name: Checkout
        uses: actions/checkout@v3
      - run: brew tap alan-turing-institute/homebrew-hut23
      - run: brew install --build-bottle --verbose whatwhat
      - run: brew bottle whatwhat
